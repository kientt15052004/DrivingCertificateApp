<Window x:Class="DrivingCertificateApp.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrivingCertificateApp.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="none"
        >
    <Grid>
        <TextBlock Text="ĐĂNG NHẬP" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <StackPanel Margin="40,60,40,40">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Height="30"/>

            <TextBlock Text="Mật khẩu:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="30"/>

            <TextBlock x:Name="lblError" Foreground="Red" Visibility="Collapsed"
                       Margin="0,10,0,0"/>

            <Button Content="Đăng Nhập" Height="40" Margin="0,20,0,0" 
                    Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
